{
    "name": "wplace-calculator",
    "version": "1.0.0",
    "description": "Calculadora avanzada de tiempo de recarga de píxeles para WPlace con precisión militar",
    "main": "index.html",
    "scripts": {
        "start": "npx http-server . -p 3000 -o",
        "dev": "npx live-server --port=3000 --open=/",
        "build": "echo 'No build process needed - static files ready for deployment'",
        "deploy": "vercel --prod",
        "preview": "vercel",
        "lint": "echo 'No linting configured - vanilla JavaScript project'",
        "validate": "html5validator --root . --log INFO",
        "lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
        "serve": "python -m http.server 3000"
    },
    "keywords": [
        "wplace",
        "calculator",
        "pixel",
        "recarga",
        "tiempo",
        "gaming",
        "herramienta",
        "javascript",
        "css3",
        "html5",
        "responsive",
        "pwa"
    ],
    "author": {
        "name": "Tu Nombre",
        "email": "tu@email.com",
        "url": "https://github.com/usuario"
    },
    "license": "MIT",
    "homepage": "https://wplace-calculator.vercel.app",
    "repository": {
        "type": "git",
        "url": "https://github.com/usuario/wplace-calculator.git"
    },
    "bugs": {
        "url": "https://github.com/usuario/wplace-calculator/issues"
    },
    "devDependencies": {
        "http-server": "^14.1.1",
        "live-server": "^1.2.2",
        "lighthouse": "^11.4.0",
        "html5validator": "^0.4.2"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ],
    "files": [
        "index.html",
        "style.css",
        "script.js",
        "404.html",
        "vercel.json",
        "README.md",
        "LICENSE"
    ]
}